<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.pictureupload">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BaseApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PictureUpload">
        <activity
            android:name=".ui.landing_screen.LandingScreenActivity"
            android:exported="true"
            android:label="@string/title_activity_landing_screen"
            android:theme="@style/Theme.PictureUpload.NoActionBar" />
        <activity
            android:name=".PictureActivity"
            android:exported="true"
            android:label="@string/title_activity_picture"
            android:theme="@style/Theme.PictureUpload.NoActionBar" />
        <activity
            android:name=".ListingActivity"
            android:exported="true"
            android:label="@string/title_activity_listing"
            android:theme="@style/Theme.PictureUpload.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PictureUpload.NoActionBar"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.PictureUpload.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.workmanager-init"
            tools:node="remove"
            tools:replace="android:authorities"
            />
    </application>

</manifest>